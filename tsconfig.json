{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "NodeNext",
        "sourceMap": false,
        "outDir": "build",
        "strict": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2021",
            "DOM"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}